project Skyguardis is

   for Languages use ("Ada");
   for Source_Dirs use ("src/ada/**", "include/ada/**");
   for Object_Dir use "build/ada";
   for Exec_Dir use "build/bin";

   for Main use ("main_gun_control.adb");

   package Compiler is
      for Default_Switches ("Ada") use ("-gnat2022", "-gnatwa", "-gnaty");
   end Compiler;

   package Builder is
      for Default_Switches ("Ada") use ("-j0");
   end Builder;

end Skyguardis;

